<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/650dce115d.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>

  <body>
    <div>
      <%= flash[:notice] %>
    </div>
    <!--header-->
    <header>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
          <% if user_signed_in? %>
            <div class="navbar-brand">
              <%= link_to 'Bookers', root_path, class: "navbar-brand" %>
            </div>
              <ul class="ml-auto d-flex">
                <li class="nav-link text-light">
                  <%= link_to user_path(current_user), class: "nav-link text-light" do %>
                    <i class="fas fa-home"></i>Home
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-users"></i>Users
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-book-open"></i>Books
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                    <i class="fas fa-sign-out-alt"></i>Log out
                  <% end %>
                </li>
              </ul>
          <% else %>
             <div class="navbar-brand">
              <%= link_to 'Bookers', root_path, class: "nav-link text-light" %>
            </div>
              <ul class="ml-auto d-flex">
                <li class="nav-link text-light">
                  <%= link_to root_path, class: "nav-link text-light" do %>
                    <i class="fas fa-home"></i>Home
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to about_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-link"></i>About
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-user-plus"></i>Sign up
                  <% end %>
                </li>
                <li class="nav-link text-light">
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                    <i class="fas fa-sign-in-alt"></i>Log in
                  <% end %>
                </li>
              </ul>
          </div>
            <% end %>
      </nav>
    </header>
    <%= yield %>
    <!--footer-->
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
